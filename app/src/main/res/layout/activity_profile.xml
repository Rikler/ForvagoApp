<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            tools:context=".ProfileActivity">

            <!-- Logo FORVAGO -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:src="@drawable/logo_forvago"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Icono de Menú -->

            <!-- Nombre del Usuario -->

            <ImageView
                android:id="@+id/menu_button"
                android:layout_width="55dp"
                android:layout_height="46dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text=""
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivLogo" />

            <!-- Imagen de Perfil -->
            <ImageView
                android:id="@+id/ivImagenPerfil"
                android:layout_width="123dp"
                android:layout_height="123dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/account_circle"
                android:src="@drawable/ic_account"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNombreUsuario" />

            <!-- Información del Usuario -->
            <TextView
                android:id="@+id/tvInformacionUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text="@string/profile_informacion_usuario_text"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivImagenPerfil" />

            <!-- Detalle Nombre -->
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text="@string/profile_name_text"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvInformacionUsuario" />

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="96dp"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text=""
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@+id/tvNombre"
                app:layout_constraintTop_toBottomOf="@+id/tvInformacionUsuario"/>

            <!-- Detalle Apellido -->
            <TextView
                android:id="@+id/tvApellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text="@string/profile_lastname_text"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNombre" />

            <TextView
                android:id="@+id/tvProfileLastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="96dp"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text=""
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@+id/tvApellido"
                app:layout_constraintTop_toBottomOf="@+id/tvProfileName"/>

            <!-- Detalle Correo -->
            <TextView
                android:id="@+id/tvCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text="@string/profile_email_text"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvApellido" />

            <TextView
                android:id="@+id/tvProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="96dp"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text=""
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@+id/tvCorreo"
                app:layout_constraintTop_toBottomOf="@+id/tvApellido"/>

            <!-- Detalle Edad -->
            <TextView
                android:id="@+id/tvEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text="@string/profile_age_text"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCorreo" />

            <TextView
                android:id="@+id/tvProfileAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="96dp"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text=""
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@+id/tvEdad"
                app:layout_constraintTop_toBottomOf="@+id/tvProfileEmail"/>

            <!-- Preferencias de Viaje -->
            <TextView
                android:id="@+id/tvPreferenciasViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text="@string/profile_preferences_text"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvProfileAge" />

            <!-- Destinos Favoritos -->
            <TextView
                android:id="@+id/tvFavorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text="@string/profile_favorites_text"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPreferenciasViaje" />

            <TextView
                android:id="@+id/tvProfileFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="146dp"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text=""
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@+id/tvFavorites"
                app:layout_constraintTop_toBottomOf="@+id/tvPreferenciasViaje"/>

            <!-- Idiomas -->
            <TextView
                android:id="@+id/tvLanguages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text="@string/profile_languages_text"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvProfileFavorites" />

            <TextView
                android:id="@+id/tvProfileLanguages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="96dp"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text=""
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@+id/tvLanguages"
                app:layout_constraintTop_toBottomOf="@+id/tvProfileFavorites"/>

            <!-- Intereses Especiales -->
            <TextView
                android:id="@+id/tvSpecial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text="@string/profile_special_text"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvProfileLanguages" />

            <TextView
                android:id="@+id/tvProfileSpecial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="166dp"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:text=""
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@+id/tvSpecial"
                app:layout_constraintTop_toBottomOf="@+id/tvProfileLanguages"/>

            <!-- Botón Volver al Inicio -->
            <Button
                android:id="@+id/btnVolverInicio"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:width="164dp"
                android:background="@drawable/button_style"
                android:fontFamily="sans-serif"
                android:text="@string/profile_button_home_text"
                android:textColor="@color/urlButton"
                android:textSize="11sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvProfileSpecial" />

            <!--    SECTION NO INFO    -->

            <TextView
                android:id="@+id/tvNoInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/profile_no_info_text"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivImagenPerfil" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:width="164dp"
                android:background="@drawable/button_style"
                android:fontFamily="sans-serif"
                android:text="@string/profile_button_no_info_text"
                android:textColor="@color/urlButton"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNoInfo" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/menu_container"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@android:color/transparent" />

</androidx.drawerlayout.widget.DrawerLayout>